<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stock Transfer Serial Wizard Form View -->
    <record id="stock_transfer_serial_wizard_form_view" model="ir.ui.view">
        <field name="name">stock.transfer.serial.wizard.form</field>
        <field name="model">stock.transfer.serial.wizard</field>
        <field name="arch" type="xml">
            <form string="Вибір серійних номерів для переміщення">
                <header>
                    <button name="action_confirm_selection" string="Підтвердити вибір" 
                            type="object" class="btn-primary" icon="fa-check"/>
                    <button string="Скасувати" class="btn-secondary" special="cancel"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="nomenclature_name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Інформація про переміщення">
                            <field name="transfer_id" invisible="1"/>
                            <field name="nomenclature_id" invisible="1"/>
                            <field name="location_from_type" invisible="1"/>
                            <field name="location_to_type" invisible="1"/>
                            
                            <label for="warehouse_from_id" string="З:" 
                                   attrs="{'invisible': [('location_from_type', '!=', 'warehouse')]}"/>
                            <field name="warehouse_from_id" nolabel="1" 
                                   attrs="{'invisible': [('location_from_type', '!=', 'warehouse')]}"/>
                            
                            <label for="employee_from_id" string="З:" 
                                   attrs="{'invisible': [('location_from_type', '!=', 'employee')]}"/>
                            <field name="employee_from_id" nolabel="1" 
                                   attrs="{'invisible': [('location_from_type', '!=', 'employee')]}"/>
                            
                            <label for="warehouse_to_id" string="В:" 
                                   attrs="{'invisible': [('location_to_type', '!=', 'warehouse')]}"/>
                            <field name="warehouse_to_id" nolabel="1" 
                                   attrs="{'invisible': [('location_to_type', '!=', 'warehouse')]}"/>
                            
                            <label for="employee_to_id" string="В:" 
                                   attrs="{'invisible': [('location_to_type', '!=', 'employee')]}"/>
                            <field name="employee_to_id" nolabel="1" 
                                   attrs="{'invisible': [('location_to_type', '!=', 'employee')]}"/>
                        </group>
                        
                        <group string="Кількість">
                            <field name="required_qty" readonly="1"/>
                            <field name="total_available_qty" readonly="1"/>
                            <field name="total_selected_qty" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Доступні залишки" name="available_balances">
                            <field name="available_balance_ids" nolabel="1">
                                <list editable="false" create="false" delete="false">
                                    <field name="balance_id" invisible="1"/>
                                    <field name="batch_id" invisible="1"/>
                                    <field name="batch_number" string="Партія"/>
                                    <field name="qty_available" string="Доступно"/>
                                    <field name="serial_count" string="Серійних номерів"/>
                                    <button name="action_load_serials" string="Завантажити S/N" 
                                            type="object" class="btn-primary btn-sm" 
                                            icon="fa-download"
                                            attrs="{'invisible': [('serial_count', '=', 0)]}"/>
                                </list>
                            </field>
                            <div class="alert alert-info" role="alert">
                                <i class="fa fa-info-circle"/> Оберіть залишки та натисніть "Завантажити S/N" 
                                для додавання серійних номерів до переміщення.
                            </div>
                        </page>
                        
                        <page string="Обрані серійні номери" name="selected_serials">
                            <field name="selected_serial_ids" nolabel="1">
                                <list editable="false" create="false" delete="true">
                                    <field name="balance_id" invisible="1"/>
                                    <field name="batch_id" invisible="1"/>
                                    <field name="batch_number" string="Партія"/>
                                    <field name="serial_number" string="Серійний номер"/>
                                    <button name="action_remove" string="Видалити" 
                                            type="object" class="btn-danger btn-sm" 
                                            icon="fa-trash"
                                            confirm="Ви впевнені, що хочете видалити цей серійний номер?"/>
                                </list>
                            </field>
                            <div class="alert alert-success" role="alert" 
                                 attrs="{'invisible': [('total_selected_qty', '=', 0)]}">
                                <i class="fa fa-check-circle"/> Обрано серійних номерів: 
                                <field name="total_selected_qty" readonly="1" nolabel="1" class="fw-bold"/>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Stock Transfer Serial Wizard Action -->
    <record id="action_stock_transfer_serial_wizard" model="ir.actions.act_window">
        <field name="name">Вибір серійних номерів</field>
        <field name="res_model">stock.transfer.serial.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="stock_transfer_serial_wizard_form_view"/>
    </record>
</odoo>