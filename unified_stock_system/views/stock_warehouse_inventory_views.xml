<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- List View -->
        <record id="view_stock_warehouse_inventory_list" model="ir.ui.view">
            <field name="name">stock.warehouse.inventory.list</field>
            <field name="model">stock.warehouse.inventory</field>
            <field name="arch" type="xml">
                <list string="Складські залишки" 
                      decoration-warning="qty_on_hand &lt; 5"
                      decoration-danger="qty_on_hand &lt;= 0"
                      create="false" edit="false" delete="false">
                    
                    <field name="warehouse_id"/>
                    <field name="nomenclature_id"/>
                    <field name="batch_name"/>
                    <field name="qty_on_hand" sum="Загальна кількість"/>
                    <field name="qty_available" sum="Доступно"/>
                    <field name="uom_id"/>
                    <field name="unit_cost"/>
                    <field name="total_cost" sum="Загальна вартість"/>
                    <field name="last_movement_date"/>
                    <field name="source_document_type"/>
                    <field name="source_document_number"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_stock_warehouse_inventory_form" model="ir.ui.view">
            <field name="name">stock.warehouse.inventory.form</field>
            <field name="model">stock.warehouse.inventory</field>
            <field name="arch" type="xml">
                <form string="Складський залишок" create="false" edit="false" delete="false">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="display_name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Основна інформація">
                                <field name="warehouse_id"/>
                                <field name="nomenclature_id"/>
                                <field name="batch_name"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            
                            <group string="Кількості">
                                <field name="qty_on_hand"/>
                                <field name="qty_available"/>
                                <field name="uom_id"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Вартісні показники">
                                <field name="unit_cost"/>
                                <field name="total_cost"/>
                            </group>
                            
                            <group string="Джерело">
                                <field name="source_document_type"/>
                                <field name="source_document_number"/>
                                <field name="last_movement_date"/>
                            </group>
                        </group>
                        
                        <group string="Додаткова інформація" groups="base.group_no_one">
                            <field name="serial_numbers"/>
                            <field name="source_document_id"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_stock_warehouse_inventory_search" model="ir.ui.view">
            <field name="name">stock.warehouse.inventory.search</field>
            <field name="model">stock.warehouse.inventory</field>
            <field name="arch" type="xml">
                <search string="Пошук залишків">
                    <field name="nomenclature_id" string="Товар"/>
                    <field name="warehouse_id" string="Склад"/>
                    <field name="batch_name" string="Партія"/>
                    <field name="source_document_number" string="Документ"/>
                    
                    <filter string="Є в наявності" name="available" 
                            domain="[('qty_on_hand', '&gt;', 0)]"/>
                    <filter string="Критичний залишок" name="critical" 
                            domain="[('qty_on_hand', '&lt;=', 5), ('qty_on_hand', '&gt;', 0)]"/>
                    <filter string="Нульовий залишок" name="zero" 
                            domain="[('qty_on_hand', '&lt;=', 0)]"/>
                    
                    <separator/>
                    <filter string="Прихідні накладні" name="receipt_incoming" 
                            domain="[('source_document_type', '=', 'receipt_incoming')]"/>
                    <filter string="Акти оприходування" name="receipt_disposal" 
                            domain="[('source_document_type', '=', 'receipt_disposal')]"/>
                    <filter string="Переміщення" name="transfer" 
                            domain="[('source_document_type', '=', 'transfer')]"/>
                    
                    <separator/>
                    <filter string="Активні" name="active" 
                            domain="[('active', '=', True)]"/>
                    <filter string="Архівні" name="inactive" 
                            domain="[('active', '=', False)]"/>
                    
                    <group expand="0" string="Групування за">
                        <filter string="Складом" name="group_warehouse" 
                                context="{'group_by': 'warehouse_id'}"/>
                        <filter string="Товаром" name="group_nomenclature" 
                                context="{'group_by': 'nomenclature_id'}"/>
                        <filter string="Партією" name="group_batch" 
                                context="{'group_by': 'batch_name'}"/>
                        <filter string="Типом документа" name="group_source_type" 
                                context="{'group_by': 'source_document_type'}"/>
                        <filter string="Компанією" name="group_company" 
                                context="{'group_by': 'company_id'}" 
                                groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_stock_warehouse_inventory" model="ir.actions.act_window">
            <field name="name">Складські залишки</field>
            <field name="res_model">stock.warehouse.inventory</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_stock_warehouse_inventory_search"/>
            <field name="context">{'search_default_available': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Тут відображаються поточні залишки товарів на складах
                </p>
                <p>
                    Централізована таблиця залишків оновлюється автоматично при:
                </p>
                <ul>
                    <li>Проведенні прихідних накладних</li>
                    <li>Проведенні актів оприходування</li>
                    <li>Проведенні документів переміщення</li>
                    <li>Поверненнях з сервісу</li>
                </ul>
                <p>
                    Для правильної роботи переміщень обов'язково мігруйте існуючі дані.
                </p>
            </field>
        </record>

        <!-- Migration Wizard Views -->
        <record id="view_stock_warehouse_inventory_migration_form" model="ir.ui.view">
            <field name="name">stock.warehouse.inventory.migration.form</field>
            <field name="model">stock.warehouse.inventory.migration</field>
            <field name="arch" type="xml">
                <form string="Міграція залишків">
                    <sheet>
                        <div class="oe_title">
                            <h1>Міграція існуючих залишків</h1>
                        </div>
                        
                        <div class="alert alert-warning" role="alert">
                            <strong>Увага!</strong> Цей процес видалить всі існуючі записи 
                            в централізованій таблиці залишків та створить їх заново 
                            на основі проведених документів.
                        </div>
                        
                        <div class="alert alert-info" role="alert">
                            <strong>Що буде мігровано:</strong>
                            <ul>
                                <li>Прихідні накладні (статус "Проведено")</li>
                                <li>Акти оприходування (статус "Проведено")</li>
                                <li>Повернення з сервісу (статус "Проведено")</li>
                            </ul>
                        </div>
                        
                        <p>
                            Переконайтеся, що всі необхідні документи мають статус "Проведено" 
                            перед запуском міграції.
                        </p>
                    </sheet>
                    
                    <footer>
                        <button name="migrate_existing_data" type="object" 
                                string="Запустити міграцію" class="btn-primary"/>
                        <button string="Скасувати" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_stock_warehouse_inventory_migration" model="ir.actions.act_window">
            <field name="name">Міграція залишків</field>
            <field name="res_model">stock.warehouse.inventory.migration</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Menu Items -->
        <menuitem id="menu_stock_warehouse_inventory"
                  name="Поточні залишки"
                  parent="stock.menu_stock_root"
                  action="action_stock_warehouse_inventory"
                  sequence="35"/>

        <menuitem id="menu_stock_warehouse_inventory_migration"
                  name="Міграція залишків"
                  parent="stock.menu_stock_root"
                  action="action_stock_warehouse_inventory_migration"
                  sequence="100"
                  groups="base.group_system"/>

    </data>
</odoo>