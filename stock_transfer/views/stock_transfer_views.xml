<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Форма переміщення -->
        <record id="view_stock_transfer_form" model="ir.ui.view">
            <field name="name">stock.transfer.form</field>
            <field name="model">stock.transfer</field>
            <field name="arch" type="xml">
                <form string="Переміщення товарів">
                    <header>
                        <button name="action_confirm" string="Підтвердити" type="object" 
                                class="btn-primary" invisible="state != 'draft'"/>
                        <button name="action_done" string="Провести" type="object" 
                                class="btn-primary" invisible="state != 'confirmed'"/>
                        <button name="action_cancel" string="Скасувати" type="object" 
                                invisible="state in ['done', 'cancelled']"/>
                        <button name="action_draft" string="В чернетку" type="object" 
                                invisible="state != 'cancelled'"/>
                        
                        <!-- Кнопка додавання всіх доступних товарів -->
                        <button name="action_add_all_available_items" string="Додати всі доступні товари" 
                                type="object" invisible="state != 'draft' or not available_stock_ids"
                                class="btn-secondary" help="Додає всі товари, що є на залишку"/>
                        
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="number" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="date" readonly="state in ['done', 'cancelled']"/>
                                <field name="company_id" readonly="state in ['done', 'cancelled']" 
                                       options="{'no_create': True}"/>
                                <field name="transfer_type" readonly="state in ['done', 'cancelled']"/>
                            </group>
                            <group>
                                <field name="warehouse_from_id" 
                                       invisible="transfer_type in ['employee', 'employee_warehouse']"
                                       required="transfer_type in ['warehouse', 'warehouse_employee']"
                                       readonly="state in ['done', 'cancelled']"
                                       options="{'no_create': True}"/>
                                <field name="warehouse_to_id" 
                                       invisible="transfer_type in ['employee', 'employee_warehouse']"
                                       required="transfer_type in ['warehouse', 'employee_warehouse']"
                                       readonly="state in ['done', 'cancelled']"
                                       options="{'no_create': True}"/>
                                <field name="employee_from_id" 
                                       invisible="transfer_type in ['warehouse', 'warehouse_employee']"
                                       required="transfer_type in ['employee', 'employee_warehouse']"
                                       readonly="state in ['done', 'cancelled']"
                                       options="{'no_create': True}"/>
                                <field name="employee_to_id" 
                                       invisible="transfer_type in ['warehouse', 'employee_warehouse']"
                                       required="transfer_type in ['employee', 'warehouse_employee']"
                                       readonly="state in ['done', 'cancelled']"
                                       options="{'no_create': True}"/>
                                <field name="posting_datetime" readonly="1" invisible="not posting_datetime"/>
                            </group>
                        </group>
                        
                        <!-- Приховані поля для роботи -->
                        <field name="available_stock_ids" invisible="1"/>
                        <field name="total_lines" invisible="1"/>
                        <field name="total_qty" invisible="1"/>
                        <field name="total_amount_no_vat" invisible="1"/>
                        
                        <!-- Інформація про доступні залишки -->
                        <div class="alert alert-info" role="alert" invisible="not available_stock_ids">
                            <h5><i class="fa fa-info-circle"/> Доступні залишки</h5>
                            <p>У джерелі переміщення знайдені товари на залишку. Ви можете додати їх до документа.</p>
                        </div>
                        
                        <div class="alert alert-warning" role="alert" invisible="available_stock_ids">
                            <h5><i class="fa fa-exclamation-triangle"/> Залишки відсутні</h5>
                            <p>У вибраному джерелі переміщення немає товарів на залишку. 
                               Перевірте правильність вибору складу/працівника.</p>
                        </div>
                        
                        <notebook>
                            <page string="Позиції переміщення">
                                <field name="line_ids" readonly="state in ['done', 'cancelled']">
                                    <list editable="bottom" 
                                          decoration-danger="qty &gt; max_available_qty"
                                          decoration-warning="max_available_qty == 0"
                                          create="state not in ['done', 'cancelled'] and available_stock_ids"
                                          delete="state not in ['done', 'cancelled']">
                                        
                                        <!-- Товар (тільки з доступних) -->
                                        <field name="nomenclature_id" 
                                               required="1"
                                               domain="[('id', 'in', available_nomenclature_ids)]"
                                               options="{'no_create': True, 'no_edit': False}"/>
                                        
                                        <!-- Приховане поле для доступних товарів -->
                                        <field name="available_nomenclature_ids" invisible="1"/>
                                        
                                        <!-- Партія/Лот -->
                                        <field name="lot_batch" 
                                               string="Партія"
                                               placeholder="Введіть назву партії"/>
                                        
                                        <!-- Доступні партії (підказка) -->
                                        <field name="available_batches" 
                                               readonly="1" 
                                               string="Доступно"
                                               optional="show"/>
                                        
                                        <!-- Одиниця виміру -->
                                        <field name="selected_uom_id" required="1" 
                                               options="{'no_create': True}"/>
                                        
                                        <!-- Кількість -->
                                        <field name="qty" required="1"/>
                                        
                                        <!-- Максимально доступна кількість -->
                                        <field name="max_available_qty" readonly="1" 
                                               string="Макс. доступно"
                                               optional="show"/>
                                        
                                        <!-- Ціна без ПДВ -->
                                        <field name="price_unit_no_vat" 
                                               string="Ціна без ПДВ"/>
                                        
                                        <!-- Сума без ПДВ -->
                                        <field name="amount_no_vat" readonly="1" 
                                               string="Сума без ПДВ"/>
                                        
                                        <!-- Кнопка для взяття повної партії -->
                                        <button name="action_take_full_batch" type="object" 
                                                string="Взяти всю партію" 
                                                icon="fa-arrow-down"
                                                invisible="not nomenclature_id or not lot_batch or max_available_qty == 0"
                                                help="Встановити кількість рівну всій доступній кількості партії"/>
                                    </list>
                                </field>
                                
                                <!-- Довідкова інформація про доступні залишки -->
                                <group string="📋 Довідка: доступні товари на залишку" 
                                       invisible="not available_stock_ids or state in ['done', 'cancelled']" 
                                       col="1">
                                    <div class="alert alert-info">
                                        <strong>💡 Підказка:</strong> Нижче показані всі товари, які є на залишку у вибраного відправника.
                                    </div>
                                    
                                    <field name="available_stock_ids" nolabel="1" readonly="1">
                                        <list string="Доступні товари на залишку" create="false" edit="false" delete="false">
                                            <field name="nomenclature_id" string="🏷️ Товар"/>
                                            <field name="lot_batch" string="📦 Партія/Лот"/>
                                            <field name="available_qty" string="📊 Доступна кількість"/>
                                            <field name="location_id" string="📍 Локація" 
                                                   invisible="not location_id"/>
                                        </list>
                                    </field>
                                </group>
                                
                                <!-- Статистика документа -->
                                <group string="📈 Статистика документа" col="4" invisible="not line_ids">
                                    <field name="total_lines" string="Кількість позицій" readonly="1"/>
                                    <field name="total_qty" string="Загальна кількість" readonly="1"/>
                                    <field name="total_amount_no_vat" string="Сума без ПДВ" readonly="1"/>
                                </group>
                                
                                <!-- Інструкції для користувача -->
                                <div class="alert alert-info mt-3" role="alert" invisible="state in ['done', 'cancelled']">
                                    <h6><i class="fa fa-lightbulb-o"/> 💡 Інструкція:</h6>
                                    <ol class="mb-0">
                                        <li><strong>Оберіть тип переміщення</strong></li>
                                        <li><strong>Вкажіть відправника</strong> - система покаже доступні товари</li>
                                        <li><strong>Додайте товари:</strong>
                                            <ul>
                                                <li>🖱️ Вручну - оберіть товар з списку</li>
                                                <li>⚡ Автоматично - кнопка "Додати всі доступні товари"</li>
                                                <li>📦 По партіях - кнопка "Взяти всю партію"</li>
                                            </ul>
                                        </li>
                                        <li><strong>Підтвердіть та проведіть</strong> документ</li>
                                    </ol>
                                    
                                    <div class="mt-2">
                                        <span class="badge badge-success">✅ Зелений</span> - все добре
                                        <span class="badge badge-danger ml-2">❌ Червоний</span> - перевищено залишки
                                        <span class="badge badge-warning ml-2">⚠️ Жовтий</span> - потребує уваги
                                    </div>
                                </div>
                            </page>
                            
                            <page string="Додаткова інформація">
                                <group>
                                    <field name="notes" placeholder="Введіть примітки..."/>
                                    <field name="no_vat" string="Без ПДВ"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- List View для переміщень -->
        <record id="view_stock_transfer_list" model="ir.ui.view">
            <field name="name">stock.transfer.list</field>
            <field name="model">stock.transfer</field>
            <field name="arch" type="xml">
                <list string="Переміщення товарів" default_order="date desc, number desc">
                    <field name="number"/>
                    <field name="date"/>
                    <field name="transfer_type"/>
                    <field name="warehouse_from_id" optional="show"/>
                    <field name="warehouse_to_id" optional="show"/>
                    <field name="employee_from_id" optional="show"/>
                    <field name="employee_to_id" optional="show"/>
                    <field name="total_lines" string="Позицій"/>
                    <field name="total_qty" string="Загальна к-ть"/>
                    <field name="state" decoration-success="state == 'done'" 
                           decoration-info="state == 'confirmed'" 
                           decoration-muted="state == 'cancelled'"/>
                    <field name="posting_datetime" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- Search View для переміщень -->
        <record id="view_stock_transfer_search" model="ir.ui.view">
            <field name="name">stock.transfer.search</field>
            <field name="model">stock.transfer</field>
            <field name="arch" type="xml">
                <search string="Пошук переміщень">
                    <field name="number"/>
                    <field name="date"/>
                    <field name="warehouse_from_id"/>
                    <field name="warehouse_to_id"/>
                    <field name="employee_from_id"/>
                    <field name="employee_to_id"/>
                    
                    <separator/>
                    <filter string="Чернетки" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="Підтверджені" name="confirmed" domain="[('state','=','confirmed')]"/>
                    <filter string="Виконані" name="done" domain="[('state','=','done')]"/>
                    <filter string="Скасовані" name="cancelled" domain="[('state','=','cancelled')]"/>
                    
                    <separator/>
                    <filter string="Між складами" name="warehouse_transfer" domain="[('transfer_type','=','warehouse')]"/>
                    <filter string="Між працівниками" name="employee_transfer" domain="[('transfer_type','=','employee')]"/>
                    <filter string="Зі складу працівнику" name="warehouse_to_employee" domain="[('transfer_type','=','warehouse_employee')]"/>
                    <filter string="Від працівника на склад" name="employee_to_warehouse" domain="[('transfer_type','=','employee_warehouse')]"/>
                    
                    <separator/>
                    <filter string="Сьогодні" name="today" 
                            domain="[('date','=',context_today())]"/>
                    <filter string="Цього тижня" name="this_week" 
                            domain="[('date','&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                    
                    <group expand="0" string="Групування за">
                        <filter string="Статусом" name="group_state" context="{'group_by':'state'}"/>
                        <filter string="Типом переміщення" name="group_type" context="{'group_by':'transfer_type'}"/>
                        <filter string="Датою" name="group_date" context="{'group_by':'date'}"/>
                        <filter string="Складом відправником" name="group_warehouse_from" context="{'group_by':'warehouse_from_id'}"/>
                        <filter string="Складом одержувачем" name="group_warehouse_to" context="{'group_by':'warehouse_to_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action для переміщень -->
        <record id="action_stock_transfer" model="ir.actions.act_window">
            <field name="name">Переміщення товарів</field>
            <field name="res_model">stock.transfer</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_stock_transfer_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Створити новий документ переміщення
                </p>
                <p>
                    Тут ви можете створювати документи для переміщення товарів між складами та працівниками.
                </p>
                <ul>
                    <li>Система автоматично показує тільки товари, які є на залишку</li>
                    <li>Контролюється кількість та партії товарів</li>
                    <li>Можна переміщувати як окремі кількості, так і цілі партії</li>
                </ul>
            </field>
        </record>

    </data>
</odoo>