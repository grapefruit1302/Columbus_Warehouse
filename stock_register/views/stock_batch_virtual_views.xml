<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Virtual Batch List View -->
    <record id="view_stock_batch_virtual_tree" model="ir.ui.view">
        <field name="name">stock.batch.virtual.tree</field>
        <field name="model">stock.batch.virtual</field>
        <field name="arch" type="xml">
            <tree string="Партії товарів" default_order="date_created desc" decoration-success="state == 'active'" decoration-muted="state == 'depleted'">
                <field name="batch_number"/>
                <field name="nomenclature_id"/>
                <field name="warehouse_id"/>
                <field name="current_qty" sum="Загальна кількість"/>
                <field name="available_qty" sum="Доступна кількість"/>
                <field name="initial_qty" sum="Початкова кількість"/>
                <field name="uom_id"/>
                <field name="date_created"/>
                <field name="source_document_number"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- Virtual Batch Form View -->
    <record id="view_stock_batch_virtual_form" model="ir.ui.view">
        <field name="name">stock.batch.virtual.form</field>
        <field name="model">stock.batch.virtual</field>
        <field name="arch" type="xml">
            <form string="Партія товару" create="false" edit="false">
                <header>
                    <button name="action_view_movements" string="Рухи партії" type="object" class="btn-primary"/>
                    <button name="action_block_batch" string="Заблокувати" type="object" 
                            attrs="{'invisible': [('state', '!=', 'active')]}" class="btn-secondary"/>
                    <button name="action_unblock_batch" string="Розблокувати" type="object"
                            attrs="{'invisible': [('state', '!=', 'blocked')]}" class="btn-secondary"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="batch_number" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group name="main_info">
                            <field name="nomenclature_id" readonly="1"/>
                            <field name="warehouse_id" readonly="1"/>
                            <field name="location_id" readonly="1"/>
                            <field name="uom_id" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                        </group>
                        <group name="quantities">
                            <field name="current_qty" readonly="1"/>
                            <field name="available_qty" readonly="1"/>
                            <field name="initial_qty" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Документ-джерело">
                        <group>
                            <field name="source_document_number" readonly="1"/>
                            <field name="source_document_type" readonly="1"/>
                            <field name="date_created" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Virtual Batch Search View -->
    <record id="view_stock_batch_virtual_search" model="ir.ui.view">
        <field name="name">stock.batch.virtual.search</field>
        <field name="model">stock.batch.virtual</field>
        <field name="arch" type="xml">
            <search string="Пошук партій">
                <field name="batch_number"/>
                <field name="nomenclature_id"/>
                <field name="warehouse_id"/>
                <field name="source_document_number"/>
                
                <filter string="Активні" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Вичерпані" name="depleted" domain="[('state', '=', 'depleted')]"/>
                <filter string="З залишком" name="has_balance" domain="[('current_qty', '>', 0)]"/>
                
                <separator/>
                <filter string="Сьогодні створені" name="today" 
                        domain="[('date_created', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), 
                                ('date_created', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                <filter string="Цього тижня" name="this_week" 
                        domain="[('date_created', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter string="Цього місяця" name="this_month" 
                        domain="[('date_created', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                
                <separator/>
                <group expand="0" string="Групування">
                    <filter string="За номенклатурою" name="group_nomenclature" context="{'group_by': 'nomenclature_id'}"/>
                    <filter string="За складом" name="group_warehouse" context="{'group_by': 'warehouse_id'}"/>
                    <filter string="За статусом" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="За датою створення" name="group_date" context="{'group_by': 'date_created:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Batch Movements Virtual Views -->
    <record id="view_batch_movement_virtual_tree" model="ir.ui.view">
        <field name="name">batch.movement.virtual.tree</field>
        <field name="model">batch.movement.virtual</field>
        <field name="arch" type="xml">
            <tree string="Рухи партій" create="false" edit="false" default_order="movement_date desc" 
                  decoration-success="movement_type == 'in'" decoration-danger="movement_type == 'out'">
                <field name="movement_date"/>
                <field name="batch_number"/>
                <field name="nomenclature_id"/>
                <field name="warehouse_id"/>
                <field name="quantity" sum="Загальна кількість"/>
                <field name="running_balance"/>
                <field name="uom_id"/>
                <field name="operation_type"/>
                <field name="document_reference"/>
                <field name="movement_type" invisible="1"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="view_batch_movement_virtual_form" model="ir.ui.view">
        <field name="name">batch.movement.virtual.form</field>
        <field name="model">batch.movement.virtual</field>
        <field name="arch" type="xml">
            <form string="Рух партії" create="false" edit="false">
                <header>
                    <button name="action_view_batch" string="Переглянути партію" type="object" class="btn-primary"/>
                    <button name="action_view_document" string="Переглянути документ" type="object" class="btn-secondary"/>
                </header>
                <sheet>
                    <group>
                        <group name="batch_info">
                            <field name="batch_number" readonly="1"/>
                            <field name="nomenclature_id" readonly="1"/>
                            <field name="warehouse_id" readonly="1"/>
                            <field name="location_id" readonly="1"/>
                        </group>
                        <group name="movement_info">
                            <field name="movement_date" readonly="1"/>
                            <field name="movement_type" readonly="1"/>
                            <field name="operation_type" readonly="1"/>
                            <field name="quantity" readonly="1"/>
                            <field name="uom_id" readonly="1"/>
                            <field name="running_balance" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Документ">
                        <group>
                            <field name="document_reference" readonly="1"/>
                            <field name="recorder_type" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Примітки">
                        <field name="notes" readonly="1" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_batch_movement_virtual_search" model="ir.ui.view">
        <field name="name">batch.movement.virtual.search</field>
        <field name="model">batch.movement.virtual</field>
        <field name="arch" type="xml">
            <search string="Пошук рухів партій">
                <field name="batch_number"/>
                <field name="nomenclature_id"/>
                <field name="warehouse_id"/>
                <field name="document_reference"/>
                
                <filter string="Надходження" name="receipts" domain="[('movement_type', '=', 'in')]"/>
                <filter string="Списання" name="disposals" domain="[('movement_type', '=', 'out')]"/>
                <filter string="Переміщення" name="transfers" domain="[('operation_type', '=', 'transfer')]"/>
                
                <separator/>
                <filter string="Сьогодні" name="today"
                        domain="[('movement_date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))),
                                ('movement_date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                <filter string="Цього тижня" name="this_week"
                        domain="[('movement_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter string="Цього місяця" name="this_month"
                        domain="[('movement_date', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                
                <separator/>
                <group expand="0" string="Групування">
                    <filter string="За партією" name="group_batch" context="{'group_by': 'batch_number'}"/>
                    <filter string="За номенклатурою" name="group_nomenclature" context="{'group_by': 'nomenclature_id'}"/>
                    <filter string="За складом" name="group_warehouse" context="{'group_by': 'warehouse_id'}"/>
                    <filter string="За операцією" name="group_operation" context="{'group_by': 'operation_type'}"/>
                    <filter string="За періодом (день)" name="group_period_day" context="{'group_by': 'movement_date:day'}"/>
                    <filter string="За періодом (місяць)" name="group_period_month" context="{'group_by': 'movement_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_stock_batch_virtual" model="ir.actions.act_window">
        <field name="name">Партії товарів</field>
        <field name="res_model">stock.batch.virtual</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{
            'search_default_active': 1,
            'search_default_has_balance': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Партій не знайдено
            </p>
            <p>
                Партії автоматично створюються при надходженні товарів.
                <br/>
                Тут відображаються всі партії з поточними залишками.
            </p>
        </field>
    </record>

    <record id="action_batch_movements_from_register" model="ir.actions.act_window">
        <field name="name">Рухи партій</field>
        <field name="res_model">batch.movement.virtual</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{
            'search_default_this_month': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Рухів партій не знайдено
            </p>
            <p>
                Тут відображаються всі рухи товарів по партіях з деталізацією операцій.
            </p>
        </field>
    </record>

    <!-- Batch Analysis Wizard -->
    <record id="view_batch_analysis_wizard_form" model="ir.ui.view">
        <field name="name">batch.analysis.wizard.form</field>
        <field name="model">stock.batch.movement.wizard</field>
        <field name="arch" type="xml">
            <form string="Аналіз партій">
                <group>
                    <group name="period">
                        <field name="date_from" required="1"/>
                        <field name="date_to" required="1"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group name="filters">
                        <field name="batch_numbers" placeholder="Номери партій через кому"/>
                    </group>
                </group>
                
                <group string="Фільтри">
                    <field name="nomenclature_ids" widget="many2many_tags"/>
                    <field name="warehouse_ids" widget="many2many_tags"/>
                </group>
                
                <footer>
                    <button name="generate_batch_analysis" string="Аналіз партій" type="object" class="btn-primary"/>
                    <button name="generate_report" string="Рух партій" type="object" class="btn-secondary"/>
                    <button string="Скасувати" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_batch_analysis_wizard" model="ir.actions.act_window">
        <field name="name">Аналіз партій</field>
        <field name="res_model">stock.batch.movement.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>